                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Clima"
                ],
                "summary": "Obt√©m a temperatura de uma cidade a partir do CEP",
                "parameters": [
                    {
                        "description": "CEP para consulta",
                        "name": "request",
                        "in": "body",
